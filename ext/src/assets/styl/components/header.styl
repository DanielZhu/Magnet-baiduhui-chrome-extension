.header-slide-transition
    overflow: hidden
    transition: all .2s linear
    z-index: 40
    padding-left: 0
.header-slide-enter
    padding-left: 200px
.header-slide-leave
    padding-left: 0

header
    position: fixed
    top: 0
    width: 600px
    min-height: 60px
    z-index: 100
    .icon
        font-size 24px
        color: #DD3067
    .title-bar
        height: 60px
        width: 100%
        display: flex
        display: -webkit-flex
        background-color: #fff
        align-items: center
        -webkit-align-items: center
        border-bottom: 1px solid #eee
        .left-btn, .right-btn
            min-width: 30px
            text-align: left
            padding: 10px
            img
                max-height: 28px
                max-width: 30px
        .title
            flex: 1
            text-align: center
            font-size: 20px
            color: #DD3067
        .personal-info
            width: 150px
            text-align: right
