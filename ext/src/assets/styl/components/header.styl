
@keyframes fly-up-visible {
    0% {
        transform: translateY(100%)
    }
    100% {
        transform: translateY(0)
    }
}
@keyframes fly-down-away {
    0% {
        transform: translateY(0)
    }
    100% {
        transform: translateY(100%)
    }
}

// Label of Header Title Transition
.fly-down-transition
    transform: translateY(0)
.fly-down-enter
    animation fly-down-away .4s forwards
.fly-down-leave
    animation fly-up-visible .4s forwards

@keyframes slide-in-visible {
    0% {
        transform translateX(-200px)
    }
    100% {
        transform translateX(0)
    }
}
@keyframes slide-in-away {
    0% {
        transform translateX(0)
    }
    100% {
        transform translateX(-200px)
    }
}

// Slide Nav
.slide-transition
    overflow: hidden
    z-index: 40
    transform translateX(-200px)
    display block !important
.slide-enter
    animation slide-in-visible .4s forwards
.slide-leave
    animation slide-in-away .4s forwards

@keyframes shrink-width {
  0% {
    padding-left 0
  }
  100% {
    padding-left 200px
  }
}

@keyframes expand-width {
  0% {
    padding-left 200px
  }
  100% {
    padding-left 0
  }
}

// Header Transition working with Slide Nav
.header-slide-transition
    overflow hidden
    z-index 40
    display flex !important
    padding-left 0
.header-slide-enter
    animation shrink-width .4s both
.header-slide-leave
    animation expand-width .4s both
    display flex !important

