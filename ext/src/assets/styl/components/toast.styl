$color-success = #E07A9A
$color-error = #A90000
$color-warning = #FFBB6E
$color-info = #86a4d5

.countdown-transition
    width 0%
.countdown-enter
    animation: anim-in 3s forwards
.countdown-leave
    width 100%

@keyframes anim-in {
  0% {
    width: 0
  }
  100% {
    width: 100%
  }
}

.fly-transition
    transition all .3s linear
    opacity 0
.fly-enter
    opacity 1
.fly-leave
    opacity 0

#toast
    position fixed
    margin 0 auto
    width 60%
    margin 0 20%
    height 40px
    line-height 40px
    z-index 200
    .toast-bg, .countdown-timer
        position absolute
        height 40px
        width 100%
        top 0
        left 0
        background-color #E07A9A
    .countdown-timer
        width 0%
        background-color #FFAEC7
        z-index 5
    .toast-wrap
        position relative
        width 100%
        height 40px
        color white
        z-index 10
        &.toast-success
            background-color $color-success
        &.toast-error
            background-color $color-error
        &.toast-warning
            background-color $color-warning
        &.toast-info
            background-color $color-info
        .toast-icon
            font-size 12px
        .toast-label
            color white
            font-size 16px
            text-align center

