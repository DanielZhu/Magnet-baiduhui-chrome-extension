@import '../assets/styl/common.styl'

$logo-width: 192px
$logo-height: 168px

#app
    margin-top 0
.welcome
    position relative
    width 100%
    height 550px
    background-image radial-gradient(50% 50%, #FFABC2 0%, $hui-pink 100%)
    .logo
        position relative
        width 50px
        height auto
        text-align center
        top 50%
        left 50%
        margin-left -25px
        margin-top -21.5px
        animation splash-out .8s ease-in .3s 1 normal
        animation-fill-mode forwards

@keyframes splash-out {
    0% {
        transform: scale(1)
    }
    45% {
        transform: scale(0.6)
    }
    100% {
        transform: scale(300)
    }
}
